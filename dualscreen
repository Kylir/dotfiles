export DISPLAY=:0.0
 
function connect(){
xrandr --output eDP-1 --off --output DP-1-2 --auto --output DP-1-1 --auto --right-of DP-1-2
}
 
function disconnect(){
xrandr --output eDP-1 --auto --output DP-1-2 --off --output DP-1-1 --off 
}
 
xrandr | grep "DP-1-1 connected" &> /dev/null && connect || disconnect