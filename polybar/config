;;;;;;;;;;;;;;;;;;;;;;;;;;;
; vpn
;;;;;;;;;;;;;;;;;;;;;;;;;;;
[module/vpn]
type = custom/script
exec = if ( nmcli -t c show --active | grep vpn > /dev/null ) ; then echo "聯 vpn" ; else echo "輦 vpn" ; fi
click-left = if ( nmcli -t c show --active | grep vpn > /dev/null ) ; then vpn-down ; else vpn-up ; fi


